<script>
    function draw() {
        /* Accepting and seperating comma seperated values */
        var n = document.getElementById("num").value;
        var values = n.split(',');
        
        var canvas = document.getElementById('myCanvas');
        var ctx = canvas.getContext('2d');
        var width = 220; //bar width
        var X = 80; // first bar position 
        var base = 200;
        
        for (var i =0; i<values.length; i++) {
            var name=['Doctors','Patients','Appointments'];
            ctx.fillStyle = '#008080'; 
            var h = values[i];
            {{!-- var h = high*20; --}}
            ctx.fillRect(X,canvas.height - h,width,h);
            
            X +=  width+15;
            /* text to display Bar number */
            ctx.fillStyle = '#4da6ff';
            //{{!-- ctx.font = "14px Arial"; --}}
            ctx.fillText(name[i] + h,X-50,canvas.height - h -10);
        }
            /* Text to display scale */
            ctx.fillStyle = '#000000';
           // {{!-- ctx.fillText('Scale X : '+canvas.width+' Y : '+canvas.height,800,10); --}}
  
    }
    function reset(){
         var canvas = document.getElementById('myCanvas');
          var ctx = canvas.getContext('2d');
           ctx.clearRect(0, 0, canvas.width, canvas.height);
    }
</script>
